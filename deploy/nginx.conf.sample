# Sample Nginx reverse proxy config for WarpDrop
# Assumes containers or services reachable at 127.0.0.1:3000 (frontend) and 127.0.0.1:8080 (backend)

map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
  listen 80;
  server_name YOUR_DOMAIN;

  # Redirect HTTP to HTTPS if you terminate TLS on Nginx
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  server_name YOUR_DOMAIN;

  # ssl_certificate /etc/letsencrypt/live/YOUR_DOMAIN/fullchain.pem;
  # ssl_certificate_key /etc/letsencrypt/live/YOUR_DOMAIN/privkey.pem;

  # Proxy frontend at root
  location / {
    proxy_pass http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # Proxy websocket to backend at /ws
  location /ws {
    proxy_pass http://127.0.0.1:8080/ws;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}
